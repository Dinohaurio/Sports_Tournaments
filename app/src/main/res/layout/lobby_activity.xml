<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    tools:context=".LobbyActivity">

    <FrameLayout
        android:id="@+id/notification_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="end">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvBienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:layout_marginStart="12dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/noti"
            android:layout_marginLeft="50dp"
            android:clickable="true"
            android:onClick="onNotificationIconClick" />

        <ImageView
            android:id="@+id/notification_badge"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/cir_rojo"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button_lobby"
                android:text="CREAR TORNEO"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_button_lobby"
                android:text="BUSCAR TORNEOS"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_button_lobby"
                android:text="TORNEOS CREADOS"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button4"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button_lobby"
                android:text="MENSAJES"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_button_lobby"
                android:text="TORNEOS INSCRITO"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_button_lobby"
                android:text="Cerrar Sesión"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/buttonAdmin"
        android:layout_width="310dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="ADMINISTRACIÓN"
        android:layout_gravity="center"
        android:visibility="gone" />
</LinearLayout>